        <DataGrid x:Name="apartments1DataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" Margin="66,205,50.2,10.2" RowDetailsVisibilityMode="VisibleWhenSelected">
